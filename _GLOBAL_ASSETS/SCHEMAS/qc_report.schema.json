{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "qc_report.schema.json",
  "title": "QC Report",
  "type": "object",
  "required": [
    "version",
    "episode_id",
    "checks",
    "summary"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "episode_id": {
      "type": "string"
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "category",
          "metric",
          "value",
          "threshold",
          "pass"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "category": {
            "type": "string",
            "enum": [
              "image",
              "video",
              "audio",
              "lipsync",
              "pacing",
              "edutainment",
              "captions",
              "safety"
            ]
          },
          "metric": {
            "type": "string"
          },
          "value": {
            "type": "number"
          },
          "threshold": {
            "type": "number"
          },
          "pass": {
            "type": "boolean"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "required": [
        "passed",
        "failed"
      ],
      "properties": {
        "passed": {
          "type": "integer",
          "minimum": 0
        },
        "failed": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "updated_at": {
      "type": "string"
    }
  }
}